{
    "name": "nomiscz/pig-latin",
    "description": "Pig Latin Translator",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "NomisCZ",
            "email": "nomiscz@outlook.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "symfony/console": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "slevomat/coding-standard": "^8.15"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
